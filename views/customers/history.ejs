<style>  
    @media screen and (max-width: 750px){
        .container{
            width: 100% !important;
        }
    }
</style>

<!-- Customer History -->
<div class="container p-5 my-2" style="width: 40%;">
    <div class="card" style="border: none; margin-bottom: -3rem;">
        <div class="card-header" style="background-color: #586BA4; font-size: larger; font-weight: 500; color: white;">
            Transaction History
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <% if(customerHistory.transactions.length > 0) { %>
                    <% for(let i of customerHistory.transactions) {%>
                        <li class="list-group-item">
                            <%= i.statement %></b>
                        </li>
                        <% } %>
                <% } else { %>
                    <li class="list-group-item" style="text-transform: capitalize;">
                        No Transactions Made
                    </li>
                <% } %>    
            </ul>
            <div class="card-body">
                <a class="btn btn-success" style="background-color: #5cb85c;" href="/customers/<%= customerHistory._id %>">Back</a>
            </div>
        </div>
    </div>
</div>